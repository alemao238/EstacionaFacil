<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:elevation="8dp"
        app:cardCornerRadius="5dp"
        >

        <RelativeLayout
            android:layout_margin="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/name_parking"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:layout_marginBottom="8dp"
                android:textSize="24dp"
                android:text="Name Parking"/>

            <TextView
                android:id="@+id/address"
                android:layout_below="@+id/name_parking"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:layout_marginBottom="8dp"
                android:text="Address"/>
            <ImageView
                android:id="@+id/star1"
                android:src="@android:drawable/btn_star_big_on"
                android:layout_below="@+id/address"
                android:layout_alignRight="@+id/address"
                android:layout_width="25dp"
                android:layout_height="wrap_content" />

            <ImageView
                android:id="@+id/star2"
                android:src="@android:drawable/btn_star_big_on"
                android:layout_below="@+id/address"
                android:layout_toLeftOf="@+id/star1"
                android:layout_width="25dp"
                android:layout_height="wrap_content" />

            <ImageView
                android:id="@+id/star3"
                android:src="@android:drawable/btn_star_big_on"
                android:layout_below="@+id/address"
                android:layout_toLeftOf="@+id/star2"
                android:layout_width="25dp"
                android:layout_height="wrap_content" />

            <ImageView
                android:id="@+id/star4"
                android:src="@android:drawable/btn_star_big_off"
                android:layout_below="@+id/address"
                android:layout_toLeftOf="@+id/star3"
                android:layout_width="25dp"
                android:layout_height="wrap_content" />

            <ImageView
                android:id="@+id/star5"
                android:src="@android:drawable/btn_star_big_off"
                android:layout_below="@+id/address"
                android:layout_toLeftOf="@+id/star4"
                android:layout_width="25dp"
                android:layout_height="wrap_content" />


        </RelativeLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>